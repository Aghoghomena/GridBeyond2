<script>
    $(document).ready(function () {
        //$('#myTable').DataTable();
        bindDatatable();
 

    });
        
    $('#upload').on('click', function (e) {
        console.log("hit the app");
        var data = new FormData();
        var files = $("#customFile").get(0).files;
        if (files.length > 0) {
            console.log(files[0]);
            //check the filetype
            var ftype = files[0].type;
            console.log(ftype);
            if (ftype != 'application/vnd.ms-excel') {
                alert('CSV or Excel files only!');
                e.preventDefault();
            }
            data.append("myFile", files[0]);
        }
        else {
            alert("Select a File");
        }
        var count = 0;
        $.ajax({
            url: "/Home/ReadFile",
            contentType: false,
            processData: false,
            type: 'POST',
            data: data,
            success: function (response) {
                console.log(response);
                if (response.statusCode === 200) {
                    $("#minvalue").text(response.min);
                    $("#maxvalue").text(response.max);
                    $("#avgvalue").text(response.average);
                    $("#mostexpensivewindow").text("From: " + response.mostExpensive[0].FromFormattedDate + " To date: " + response.mostExpensive[0].ToFormattedDate + " with price : " + response.mostExpensive[0].Price);
                    $('#myTable').DataTable().ajax.reload();
                }
            },
            error: function (response_error) {
                console.log("an error occurred");
                console.log(response_error);
            }
        });

    })

    function bindDatatable() {
        datatable = datatable = $('#myTable')
            .DataTable({
           
                "bServerSide": true,
                "bProcessing": true,
                "bSearchable": true,
                "ajax": {
                        url: "/Home/GetData",
                        type: 'POST'
                 },
                "order": [[1, 'asc']],
                "language": {
                    "emptyTable": "No record found.",
                    "processing":
                        '<i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color:#2a2b2b;"></i><span class="sr-only">Loading...</span> '
                },
                "columns": [
                    {
                        "data": "Id",
                        "autoWidth": true,
                        "searchable": false
                    },
                    {
                        "data": "FormattedDate",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "Price",
                        "autoWidth": true,
                        "searchable": true
                    },
                    {
                        "data": "Date",
                        "autoWidth": true,
                        "searchable": true,
                        "visible": false
                    },
                ]
            });
    } 
    





</script>
